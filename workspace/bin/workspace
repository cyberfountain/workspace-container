#!/usr/bin/env bash
# Workspace-Cli. Lukasz Wisniewski

set -o errexit

__clidir=/usr/local/workspace
__vars=${__clidir}/etc/lib/vars/vars.sh
__func=${__clidir}/etc/lib/func/func.sh
__comm=${__clidir}/etc/commands
__temp=${__clidir}/etc/templates
__workdir=$(pwd)

. ${__vars}
. ${__func}

if [ "$1" = "" ] || [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    . ${__comm}/help.sh
elif [ "$1" = "mysql" ]; then
    . ${__comm}/mysql.sh
elif [ "$1" = "redis" ]; then
    . ${__comm}/redis.sh
elif [ "$1" = "install" ]; then
    case "$2" in
        'laravel') . ${__comm}/install/laravel.sh ;;
        *) . ${__comm}/install.sh ;;
    esac
else
   error "Check 'workspace --help' for some help..."
fi